{
  "name": "Caedendi's Simple Loot Filter",
  "description": "A simple loot filter .",
  "author": "Caedendi",
  "website": "https://www.nexusmods.com/diablo2resurrected/mods/360",
  "version": "0.0.1",
  "config": [
    {
      "id": "isGoldEnabled",
      "type": "checkbox",
      "name": "Gold",
      "description": "Applies the loot filter to gold.",
      "defaultValue": true
    },
    {
      "id": "isRunesEnabled",
      "type": "checkbox",
      "name": "Runes",
      "description": "Applies the loot filter to runes.",
      "defaultValue": true
    },
    {
      "id": "isItemsEnabled",
      "type": "checkbox",
      "name": "Items",
      "description": "Applies the loot filter to potions, scrolls, tomes, bolts, arrows and gems.",
      "defaultValue": true
    },
    {
      "id": "isModifyTooltipEnabled",
      "type": "checkbox",
      "name": "Modify Tooltip",
      "description": "Modifies the size and background opacity of the tooltip for items on the ground and in the inventory.",
      "defaultValue": false
    },
    {
      "id": "tooltipOpacity",
      "type": "number",
      "minValue": 0.1,
      "maxValue": 1,
      "name": "Tooltip: opacity",
      "description": "Set the tooltip background opacity (unmodded = 0.6).",
      "defaultValue": 0.75
    },
    {
      "id": "tooltipSize",
      "type": "number",
      "minValue": 20,
      "maxValue": 50,
      "name": "Tooltip: font size",
      "description": "Set the tooltip font size (unmodded = 36).",
      "defaultValue": 33
    }
  ]
}
