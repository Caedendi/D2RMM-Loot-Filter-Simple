{
  "name": "Caedendi's Simple Loot Filter",
  "description": "A simple loot filter .",
  "author": "Caedendi",
  "website": "https://www.nexusmods.com/diablo2resurrected/mods/360",
  "version": "0.2.0",
  "config": [
    {
      "id": "isGoldEnabled",
      "type": "checkbox",
      "name": "Gold",
      "description": "Applies the loot filter to gold.",
      "defaultValue": true
    },
    {
      "id": "isRunesEnabled",
      "type": "checkbox",
      "name": "Runes",
      "description": "Applies the loot filter to runes.",
      "defaultValue": true
    },
    {
      "id": "isItemsEnabled",
      "type": "checkbox",
      "name": "Items",
      "description": "Applies the loot filter to potions, scrolls, tomes, bolts, arrows and gems.",
      "defaultValue": true
    },
    {
      "id": "HiddenItemTooltipSize",
      "type": "number",
      "name": "Tooltip width for hidden items",
      "description": "Set how many spaces wide the tooltip for hidden items is (max 25).",
      "defaultValue": 0,
      "minValue": 0,
      "maxValue": 100
    },
    {
      "id": "Tooltip",
      "type": "select",
      "name": "Tooltip mods",
      "description": "Modifies the size and background opacity of the tooltip for items on the ground and in the inventory.",
      "defaultValue": "none",
      "options": [
        { "label": "Disable", "value": "none" },
        { "label": "Opacity & Size", "value": "all" },
        { "label": "Opacity", "value": "opacity" },
        { "label": "Size", "value": "size" }
      ]
    },
    {
      "id": "TooltipOpacity",
      "type": "number",
      "minValue": 0.1,
      "maxValue": 1,
      "name": "Tooltip: opacity",
      "description": "Set the tooltip background opacity (unmodded = 0.6).",
      "defaultValue": 0.75
    },
    {
      "id": "TooltipSize",
      "type": "number",
      "minValue": 20,
      "maxValue": 50,
      "name": "Tooltip: font size",
      "description": "Set the tooltip font size (unmodded = 36).",
      "defaultValue": 33
    }
  ]
}
